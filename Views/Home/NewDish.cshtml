@{
 ViewData["Title"] = "Add Dish";
}

@model Dish

<style>
    form {
        width: 400px;
    }
</style>

<h1>Add a Dish! <a href="/" class="btn btn-primary">Home</a></h1>
<form action="/dishes/create_dish" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <span asp-validation-for="Name"></span>
        <input type="text" asp-for="Name" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Calories"></label>
        <span asp-validation-for="Calories"></span>
        <input type="text" asp-for="Calories" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <span asp-validation-for="Description"></span>
        <input type="text" asp-for="Description" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Chef"></label>
        <span asp-validation-for="ChefId"></span>
        <select asp-for="ChefId" class="form-control">
            @foreach(var chef in ViewBag.AllChefs)
            {
                <option value="@chef.ChefId">@chef.FirstName @chef.LastName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Tastiness"></label>
        <span asp-validation-for="Tastiness"></span>
        <select asp-for="Tastiness" class="form-control">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    </div>
    <input type="submit" value="Add Dish" class="btn btn-success">
</form>