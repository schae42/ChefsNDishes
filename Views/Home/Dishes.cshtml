@{
    ViewData["Title"] = "Dishes";
}

@model Dish

<style>
    .new-dish {
        font-size: 20px;
        margin-left: 700px;
    }
</style>
<h1><a href="/">Chefs</a> | Dishes <a href="/dishes/new" class="new-dish btn btn-primary">Add a Dish</a></h1>
<h2>Yum, take a look at our tasty dishes!</h2>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>Name</th>
            <th>Chef</th>
            <th>Tastiness</th>
            <th>Calories</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dish in ViewBag.AllDishes)
        {
            <tr>
                <td>@dish.Name</td>
                <td>@dish.Chef.FirstName @dish.Chef.LastName</td>
                <td>@dish.Tastiness</td>
                <td>@dish.Calories</td>
            </tr>
        }
    </tbody>
</table>